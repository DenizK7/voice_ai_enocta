{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit",
            "type": "python",
            "request": "launch",
            "program": "streamlit",
            "args": [
                "run",
                "app.py"
            ],
            "cwd": "${workspaceFolder}/project_root/frontend",
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1",
                "STREAMLIT_SERVER_HEADLESS": "true"
            }
        }
    ]
}
